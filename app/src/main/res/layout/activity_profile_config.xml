<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile_config"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cooldevs.erasmuskit.ProfileConfigActivity">


    <TextView
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:id="@+id/user_name"
        android:layout_weight="0.00"
        android:layout_gravity="top"
        android:textSize="24sp" />

    <TextView
        android:text="User type:"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:id="@+id/usr"
        android:layout_weight="0.00"
        android:layout_gravity="top"
        android:textSize="14sp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_type_spinner"
        android:entries="@array/user_type_spinner"
        android:prompt="@string/user_type_spinner_title"
        android:layout_weight="0.00" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nationality_text"
        android:hint="@string/nationality_hint"
        android:layout_weight="0.00" />

    <TextView
        android:text="Study field:"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:id="@+id/study"
        android:layout_weight="0.00"
        android:layout_gravity="top"
        android:textSize="14sp" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/study_field_spinner"
        android:entries="@array/study_field_spinner"
        android:hint="@string/nationality_hint"
        android:layout_weight="0.00" />

    <TextView
        android:text="Host city:"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:id="@+id/host"
        android:layout_weight="0.00"
        android:layout_gravity="top"
        android:textSize="14sp" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/host_city_spinner"
        android:layout_weight="0.00" />

    <Button
        android:id="@+id/profile_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_btn_text"/>


</LinearLayout>
