<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileConfigActivity" >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/profile_config_ctlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/imgToolbar_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/user_toolbar_wp"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_config_activity_toolbar"
                android:layout_height="56dp"
                android:layout_width="match_parent"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="438dp"
        android:gravity="bottom|end">

        <TextView
            android:text="User type:"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:id="@+id/usr"
            android:layout_weight="0.00"
            android:layout_gravity="top"
            android:textSize="14sp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_type_spinner"
            android:entries="@array/user_type_spinner"
            android:layout_weight="0.00" />

        <TextView
            android:text="Nationality:"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:id="@+id/nationality"
            android:layout_weight="0.00"
            android:layout_gravity="top"
            android:textSize="14sp" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nationality_spinner"
            android:entries="@array/nationality_spinner"
            android:layout_weight="0.00" />


        <TextView
            android:text="Study field:"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:id="@+id/study"
            android:layout_weight="0.00"
            android:layout_gravity="top"
            android:textSize="14sp" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/study_field_spinner"
            android:entries="@array/study_field_spinner"
            android:hint="@string/nationality_hint"
            android:layout_weight="0.00" />

        <TextView
            android:text="Host city:"
            android:layout_width="371dp"
            android:layout_height="wrap_content"
            android:id="@+id/host"
            android:layout_weight="0.00"
            android:layout_gravity="top"
            android:textSize="14sp" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/host_city_spinner"
            android:layout_weight="0.00" />

        <Button
            android:id="@+id/profile_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_city_btn_text"/>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>